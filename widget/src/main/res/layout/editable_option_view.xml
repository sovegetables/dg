<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:attr/selectableItemBackground"
              android:foreground="?android:selectableItemBackground"
              android:orientation="vertical">


    <View
            android:id="@+id/custom_line_top"
            style="@style/widget_default_line"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/widget_margin_small"
            android:layout_marginRight="@dimen/widget_margin_small"
            android:background="#cacaca"
            android:visibility="visible"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="63dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tvLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_margin_middle"
                android:background="@color/widget_transparent"
                android:clickable="false"
                android:focusable="false"
                android:gravity="left|center_vertical"
                android:minHeight="63dp"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/widget_font_medium"
                android:visibility="visible"/>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/widget_margin_medium"
                android:layout_marginRight="@dimen/widget_margin_medium"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/tvRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/widget_transparent"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:lines="1"
                    android:minHeight="63dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/widget_font_medium"/>
        </RelativeLayout>

        <ImageView
                android:id="@+id/imageRight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/widget_margin_medium"
                android:clickable="false"
                android:focusable="false"
                android:src="@drawable/widget_ic_arrow_right"/>
    </LinearLayout>

    <View
            android:id="@+id/custom_line_bottom"
            style="@style/widget_default_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/widget_margin_small"
            android:layout_marginRight="@dimen/widget_margin_small"
            android:background="#cacaca"
            android:visibility="visible"/>

</LinearLayout>